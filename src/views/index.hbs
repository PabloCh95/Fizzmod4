<div class="content-block">
    <h2>Listado de productos</h2>
    <div class="link-group">
        <a href="/">Volver a ingreso de productos</a>
    </div>
    <div class="content-block">
        {{#if products.length}}
        <table>
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Descripci√≥n</th>
                <th>Foto</th>
            </tr>
            {{#each products}}
            <tr>
                <td>{{name}}</td>
                <td>${{price}}</td>
                <td>{{description}}</td>
                <td><img src={{url}} alt={{name}}></td>
            </tr>
            {{/each}}
        </table>
        {{else}}
        <p class="ERROR">No hay productos para listar</p>
        {{/if}}
    </div>
</div>